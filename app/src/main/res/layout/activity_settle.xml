<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettleActivity">
    <RelativeLayout
        android:id="@+id/Face_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/faceTextView"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_margin="40dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人脸识别取餐"/>


        <Button
            android:layout_centerInParent="true"
            android:layout_below="@id/faceTextView"
            android:layout_width="200dp"
            android:id="@+id/face_bt"
            android:text="取样拍照"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/tipText"
            android:layout_centerInParent="true"
            android:layout_margin="40dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    请把面部对准便当机的摄像头\n点击按钮进行便当机的摄像头取样"/>



        <TextView
            android:id="@+id/QRcode_tv"
            android:text="二维码取餐>"
            android:clickable="true"
            android:textColor="@color/sv_blue"
            android:layout_below="@id/tipText"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" />


    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/QR_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_above="@id/settle_QRcode_iv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_margin="40dp"
            android:textSize="40dp"
            android:layout_height="wrap_content"
            android:text="凭此二维码取餐" />

        <ImageView
            android:id="@+id/settle_QRcode_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>